type Author {
    id: String
    name: String
}

type Book {
    id: ID !
    title: String
    author: Author
    price : Float
}

input bookInput {
    id: String !
    title: String,
}

type Query {
    getBooks(sortBy: String, sortType : SortType = ASC): [Book]
    getBookById(id: ID!): Book
}

enum SortType {
    ASC
    DESC
}

type Mutation  {
    createBook(book: bookInput !): Book !
    updateBook(book: bookInput !): Book !
    removeBook(id: ID !) : Boolean!
}